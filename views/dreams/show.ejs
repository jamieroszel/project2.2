<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>
    <main>
      <h2 class="subtitle is-2">Dreams</h2>
      <a href="/dashboard">DASHBOARD</a>

      <h3 class="title is-3"><%= dream.text %></h3>

      <form action="/dreams/<%= dream._id %>?_method=PUT" method="post" class="m-3">
        <input
          class="input"
          type="text"
          name="text"
          placeholder="new dream"
          value="<%= dream.text %>"
        />
        <input class="button" type="submit" value="Update Dream" />
      </form>

      <form action="/dreams/<%= dream._id %>?_method=delete" method="post" class="m-3">
        <input class="button" type="submit" value="Delete Dream" />
      </form>
    </main>
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("../partials/footer") %>
  </body>
</html>
